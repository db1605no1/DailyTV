<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyAccountActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/account_toolbar"
        android:background="@color/red"
        ></android.support.v7.widget.Toolbar>
    <ImageView
        android:layout_marginTop="@dimen/x50"
        android:background="@android:drawable/edit_text"
        android:id="@+id/account_icon"
        android:layout_gravity="center"
        android:layout_width="@dimen/x400"
        android:layout_height="@dimen/x400" />
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_margin="@dimen/x20"
            android:padding="@dimen/x20"
            android:background="@drawable/button_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/local_img"
            android:onClick="localImg"
            android:src="@drawable/local"
            />


        <ImageButton
            android:textSize="@dimen/x39"
            android:layout_margin="@dimen/x20"
            android:padding="@dimen/x20"
            android:background="@drawable/button_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/camera"
            android:onClick="camera"
            android:src="@drawable/camera"
            />

    </LinearLayout>
<Button
    android:background="@drawable/button_log_shape"
    android:text="上传图片"
    android:textSize="@dimen/x36"
    android:textColor="@color/white"
    android:layout_gravity="center"
    android:id="@+id/account_send"
    android:onClick="changeIcon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />



</LinearLayout>
