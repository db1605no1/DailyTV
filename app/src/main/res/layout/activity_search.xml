<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/x17"
   android:orientation="vertical"
    tools:context="com.example.dailytv.SearchActivity">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:hint="请输入你要查找的节目"
        android:id="@+id/search_edit"
        android:background="@android:drawable/edit_text"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

<ImageButton
    android:paddingLeft="@dimen/x50"
    android:paddingRight="@dimen/x50"
    android:layout_marginRight="@dimen/x19"
    android:layout_marginLeft="@dimen/x19"
    android:elevation="@dimen/x8"
    android:gravity="center"
    android:background="@null"
    android:src="@drawable/search_search"
    android:id="@+id/search_start"
    android:layout_width="wrap_content"
    android:onClick="search"
    android:layout_height="match_parent" />


</LinearLayout>
<ListView
    android:layout_marginTop="@dimen/x20"
    android:layout_width="match_parent"
    android:id="@+id/search_listView"
    android:layout_height="match_parent"></ListView>


</LinearLayout>
