<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

   android:orientation="vertical"
    tools:context="com.example.dailytv.SearchActivity">
    <android.support.v7.widget.Toolbar
        app:title=" "
        app:navigationIcon="@drawable/toobar_icon"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/search_toolbar"
        android:background="@color/red"
        >

        <TextView
            android:layout_gravity="center"
            android:text="节目搜索"
            android:textSize="@dimen/x36"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </android.support.v7.widget.Toolbar>
<LinearLayout
    android:layout_marginTop="@dimen/x30"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:hint="请输入你要查找的节目"
        android:id="@+id/search_edit"
        android:background="@android:drawable/edit_text"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

<ImageButton
    android:paddingLeft="@dimen/x50"
    android:paddingRight="@dimen/x50"
    android:layout_marginRight="@dimen/x19"
    android:layout_marginLeft="@dimen/x19"
    android:elevation="@dimen/x8"
    android:gravity="center"
    android:background="@null"
    android:src="@drawable/search_search"
    android:id="@+id/search_start"
    android:layout_width="wrap_content"
    android:onClick="search"
    android:layout_height="match_parent" />


</LinearLayout>
<ListView
    android:background="@android:drawable/edit_text"
    android:layout_marginTop="@dimen/x20"
    android:layout_width="match_parent"
    android:id="@+id/search_listView"
    android:layout_height="match_parent"></ListView>


</LinearLayout>
